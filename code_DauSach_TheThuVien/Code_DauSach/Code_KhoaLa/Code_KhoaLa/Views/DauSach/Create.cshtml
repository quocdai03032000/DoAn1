@model Code_KhoaLa.Models.DauSach

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutADMIN.cshtml";
}

@using (Html.BeginForm("Create", "DauSach", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken();
    @Html.HiddenFor(model => model.HinhAnh)
    <div class="Center_add_edit_add con">
        <div class="Content_add">
            <div class="Center-h1">
                <h1><img src="~/Content/img/book-icon.png" alt="icon_book">Thêm Sách</h1>
            </div>
            @*<form action="">*@
            <div class="Form">
                <div class="Grid-Add">
                    <div class="Grid-left-img-add">
