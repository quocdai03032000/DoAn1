                        @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
                    </div>
                    <div class="Grid-rigth-content-add">

                        <div class="form-label-add">
                            <label for="ftenSach"> @Html.LabelFor(model => model.MaDauSach, htmlAttributes: new { @class = "control-label col-md-2" })</label><br><br>
                            <label for="ftenSach"> @Html.LabelFor(model => model.TenSach, htmlAttributes: new { @class = "control-label col-md-2" })</label><br><br>
